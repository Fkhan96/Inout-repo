@{
    ViewBag.Title = "Attendance Details";
}

<link href="~/css/plugin/dropzone/basic.css" rel="stylesheet" />
<link href="~/css/plugin/dropzone/dropzone.css" rel="stylesheet" />
<link href="~/css/custom/File.css" rel="stylesheet" />
<link href="~/css/plugin/datepicker/daterangepicker.css" rel="stylesheet" />

<div class="box">
    <div class="box-header">
        <div class="row">
            <div class="col-xs-2"> <h3 class="box-title"><i class="fa fa-group"></i> Attendance</h3></div>
            <div class="col-xs-10"></div>
        </div><!-- /.box-header -->
    </div>
    <!-- form start -->

    <div class="box-body">
        <div class="row">
            <div class="col-lg-9">
            </div>
            <div class="col-lg-2">
                <input type="text" id="attdaterange" name="daterange" value="01/01/2018 - 01/15/2018" />
            </div>
        </div>
        <table id="listAttendancetb" class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Employee Name</th>
                    <th>Check-in Time</th>
                    <th>Check-out Time</th>
                    <th>Time off</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div><!-- Body -->

</div><!-- /.box -->

<div class="modal fade admin-modal" id="attdetailmodal" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title"> Attendance Details</h4>
            </div>

            <div class="modal-body" data-type="modal">
                <div class="row">
                    <div class="col-lg-6">
                        <input type="button" class="form-control btn btn-success" value="Attendance Details" id="attendancedetails" onclick="return AttDetails($(this));" />
                    </div>
                    <div class="col-lg-6">
                        @*<input type="button" class="form-control btn btn-success" value="Attendance Details" id="attendancedetails" onclick="return AttDetails($(this));" />*@
                    </div>
                </div>
                <br />
                <div class="modal-footer">
                    @*<a href="#" class="btn btn-default Addtbt" onclick="return Submit(this)">OK</a>*@
                </div>
            </div>
        </div>
    </div>
</div><!-- /.view details -->
@section scripts {
    <script src="~/Scripts/Custom/AttendanceList.js"></script>
    <script src="~/Scripts/Custom/uniquevalidation.js"></script>
    <script src="~/Scripts/Custom/File.js"></script>
    <script src="~/Scripts/Custom/constant.js"></script>
    <script src="~/Scripts/Plugins/datepicker/daterangepicker.min.js"></script>
    <script>
        $(document).ready(function () {
            Trigger();
        });
    </script>
}


