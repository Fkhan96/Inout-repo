@{
    ViewBag.Title = "Employee";
}
<link href="~/css/plugin/dropzone/basic.css" rel="stylesheet" />
<link href="~/css/plugin/dropzone/dropzone.css" rel="stylesheet" />
<link href="~/css/custom/File.css" rel="stylesheet" />

<div class="box">
    <div class="box-header">
        <div class="row">
            <div class="col-xs-2"> <h3 class="box-title"><i class="fa fa-group"></i> Employee</h3></div>
            <div class="col-xs-10"></div>
        </div><!-- /.box-header -->
    </div>
    <!-- form start -->

    <div class="box-body">
        <div style="padding-bottom:10px;" class="row" data-type="filter">
            <div class="col-sm-4 hide-add-button">
                <h5>
                    <a href="#" onclick="return Add(this)">
                        <i class="fa fa-plus"></i>
                        Add a New
                    </a>
                </h5>
            </div>
            <div class="col-sm-3 text-center">
            </div>
        </div><!-- row -->
        <table id="listtb" class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Profile Picture</th>
                    <th>Name</th>
                    <th>Emp Biometrics</th>
                    <th class="">Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div><!-- Body -->

    <div class="modal fade admin-modal" id="modalAdd" tabindex="-1" role="basic" aria-hidden="true">
        <div class="modal-dialog modal-lg employee-modal" style="width: min-content;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title"> Add Employee</h4>
                </div>

                <div class="modal-body" data-type="modal">
                    <div class="row rowmargin">
                        <div class="container">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <img id='img-upload' src="../images/dummy.jpg" style="width:15%;height:15%" name="UserPictureUrl" />
                                    <div class="input-group">
                                        <span class="input-group-btn">
                                            <span class="btn btn-default btn-file">
                                                Browse… <input type="file" id="imgInp">
                                            </span>
                                        </span>
                                        <input type="text" class="form-control" readonly>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row rowmargin">
                        <div class="col-lg-4">
                            <b>Self Id *</b>
                            <input type="text" class="form-control" name="SelfId" />
                        </div>
                    </div>
                    <div class="row rowmargin">
                        <div class="col-lg-4">
                            <b>Name *</b>
                            <input type="text" class="form-control" name="Name" required />
                        </div>
                        <div class="col-lg-4">
                            <b>Father Name *</b>
                            <input type="text" class="form-control" name="FatherName" required />
                        </div>
                        <div class="col-lg-4">
                            <b>Designation *</b>
                            <input type="text" class="form-control" name="Designation" required />
                        </div>
                    </div>
                    <div class="row rowmargin">
                        <div class="col-lg-4">
                            <b>Salary *</b>
                            <input type="text" class="form-control" name="Salary" required />
                        </div>
                        <div class="col-lg-4">
                            <b>Job Type *</b>
                            <input type="text" class="form-control" name="JobType" required />
                        </div>
                        <div class="col-lg-4">
                            <b>Blood Group *</b>
                            <input type="text" class="form-control" name="BloodGroup" required />
                        </div>
                    </div>
                    <div class="row rowmargin">
                        <div class="col-lg-4">
                            <b>Shift *</b>
                            <select name="FK_ShiftID" class="form-control">
                                <option value="1">Morning</option>
                                <option value="2">Afternoon</option>
                                <option value="3">Evening</option>
                                <option value="4">Night</option>

                            </select>
                            @*  <input type="text" class="form-control" name="Shift" required />*@
                        </div>
                        <div class="col-lg-4">
                            <b>Company *</b>
                            <select name="FK_CompanyID" class="form-control">
                                <option value="1">abc</option>
                            </select>
                            @*  <input type="text" class="form-control" name="Shift" required />*@
                        </div>
                        <div class="col-lg-4">
                            <b>Address *</b>
                            <input type="text" class="form-control" name="Address" required />
                        </div>
                        
                    </div>
                    <div class="row rowmargin">
                        <div class="col-lg-4">
                            <b>Late Deduction *</b>
                            <input type="text" class="form-control" name="LateDeduction" required />
                        </div>
                        <div class="col-lg-8">
                            <b>Working Days *</b><br />
                            <input type="checkbox" name="Monday" value="0"/>
                            Monday
                            <input type="checkbox" name="Tuesday" value="1"/>
                            Tuesday
                            <input type="checkbox" name="Wednesday" value="2"/>
                            Wednesday
                            <input type="checkbox" name="Thursday" value="3"/>
                            Thursday
                            <input type="checkbox" name="Friday" value="4"/>
                            Friday
                            <input type="checkbox" name="Saturday" value="5"/>
                            Saturday
                            <input type="checkbox" name="Sunday" value="6"/>
                            Sunday
                        </div>
                    </div>
                    <div class="row rowmargin">
                        <div class="col-lg-4">
                            <b>Joining Date *</b>
                            <div class="input-group date JoiningDate" data-provide="datepicker">
                                <input type="text" name="JoiningDate" data-type="date" required class="form-control">
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-th"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <b>Contact Number *</b>
                            <input type="text" class="form-control" name="ContactNumber" required />
                        </div>
                        <div class="col-lg-4">
                            <b>Emergency Contact *</b>
                            <input type="text" class="form-control" name="EmergencyContact" required />
                        </div>
                    </div>
                    <div class="row rowmargin"> 
                        <div class="col-lg-4">
                            <b>Employment Status *</b><br />
                            <select class="form-control" name="EmploymentStatus">
                                <option value="0">Full-Time</option>
                                <option value="1">Part-Time</option>
                            </select>
                        </div> 
                        <div class="col-lg-4">
                            <b>Wage Type*</b><br />
                            <div name="WageType" class="radio">
                                <label><input type="radio" checked value="0" name="wage" class="wage"/> Per Day</label>
                                <label><input type="radio" value="1" name="wage" class="wage"/> Per Hour</label>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <b>Rate *</b>
                                <input type="text" class="form-control" name="Rate"/>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <a href="#" class="btn btn-default Addtbt" onclick="return Submit(this)">OK</a>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- /.add employee -->

</div><!-- /.box -->

<div class="modal fade admin-modal" id="modalView" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title"> Employee Details</h4>
            </div>

            <div class="modal-body" data-type="modal">
                <div class="row">
                    <div class="col-lg-6">
                        <input type="button" class="form-control btn btn-success" value="Employee Details" id="employeedetails" onclick="return Details($(this));" />
                    </div>
                    <div class="col-lg-6">
                        <input type="button" class="form-control btn btn-success" value="Attendance Details" id="attendancedetails" onclick="return AttDetails($(this));"/>
                    </div>
                </div>
                <br />
                <div class="modal-footer">
                    @*<a href="#" class="btn btn-default Addtbt" onclick="return Submit(this)">OK</a>*@
                </div>
            </div>
        </div>
    </div>
</div><!-- /.view details -->

@section scripts {
    <script src="~/Scripts/Custom/EmployeeList.js"></script>
    <script src="~/scripts/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/Custom/uniquevalidation.js"></script>
    <script src="~/Scripts/Custom/File.js"></script>
    
    <script>
        $(document).ready(function () {
            Trigger();
        });
    </script>
}




