    <link href="~/Content/library.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/css/plugin/toastr/toastr.min.css" rel="stylesheet" />
    <link href="~/css/plugin/sweetalert/sweetalert.css" rel="stylesheet" />
    <link href="~/css/bootstrap-3.3.7.css" rel="stylesheet" />

    <script src="@Url.Content("~/Scripts/jquery-3.4.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/datatables.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Custom/sweetalert.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Plugins/fullcalendar/moment.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Custom/helper.js")"></script>
    <script src="@Url.Content("~/Scripts/Custom/GenericLib.js")"></script>
